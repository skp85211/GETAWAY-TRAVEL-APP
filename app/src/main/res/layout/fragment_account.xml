<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6EC2A7"
    tools:context=".TripFragment" >

    <Spinner
        android:id="@+id/starttime"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="26dp"></Spinner>

    <Spinner
        android:id="@+id/endtime"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="75dp"></Spinner>

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RadioButton
            android:id="@+id/delhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="DELHI AIRPORT"
            android:fontFamily="casual"

            android:textColor="#000000"></RadioButton>

        <RadioButton
            android:id="@+id/mumbai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MUMBAI AIRPORT"
            android:fontFamily="casual"
            android:textColor="#000000"></RadioButton>

        <RadioButton
            android:id="@+id/bangalore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BANGALORE AIRPORT"
            android:fontFamily="casual"
            android:textColor="#000000"></RadioButton>

        <RadioButton
            android:id="@+id/kolkata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KOLKATA AIRPORT"
            android:fontFamily="casual"
            android:textColor="#000000"></RadioButton>

    </RadioGroup>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/airport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@android:drawable/ic_input_add"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/cardview_light_background"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="37dp"
        app:srcCompat="@android:drawable/ic_input_add"/>

    <TextView
        android:id="@+id/begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:fontFamily="casual"
        android:textColor="#000000"

        android:text="Select Preffered Start Time.."
        android:textSize="20sp" />

    <TextView
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="80dp"
        android:fontFamily="casual"
        android:text="Select Preffered End Time.."
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="130dp"
        android:fontFamily="casual"
        android:text="Select Arrival Airport"

        android:textSize="20sp"
        android:textColor="#000000"/>

</RelativeLayout>