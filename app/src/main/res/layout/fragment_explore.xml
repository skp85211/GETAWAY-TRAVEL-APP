<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C2C6DD"
    tools:context=".ExploreFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="390dp"
                android:layout_height="210dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/landmarks" />


            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView1"
                android:layout_marginTop="-10dp"
                android:gravity="center"
                android:text="LANDMARKS"
                android:textSize="26sp"
                android:textStyle="bold"
                android:fontFamily="serif"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="390dp"
                android:layout_height="210dp"
                android:src="@drawable/religion"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/text1"
                />
            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView2"
                android:layout_marginTop="-10dp"
                android:gravity="center"
                android:text="RELIGIOUS"
                android:textSize="26sp"
                android:textStyle="bold"
                android:fontFamily="serif"/>



            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="390dp"
                android:layout_height="210dp"
                android:src="@drawable/beach"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/text2"
                />
            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView4"
                android:layout_marginTop="-10dp"
                android:gravity="center"
                android:text="BEACHES"
                android:textSize="26sp"
                android:textStyle="bold"
                android:fontFamily="serif"/>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="390dp"
                android:layout_height="210dp"
                android:src="@drawable/fun"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/text4"
                />
            <TextView
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView5"
                android:layout_marginTop="-10dp"
                android:gravity="center"
                android:text="FUN and LEISURE"
                android:textSize="26sp"
                android:textStyle="bold"
                android:fontFamily="serif"/>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>